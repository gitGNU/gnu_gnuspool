SHELL		=	/bin/sh
@SET_MAKE@
BASE		=	.
PARENT		=	.
UTILDIR		=	util
SRCDIR		=	src
BUILDDIR	=	build
MSGFILE		=	GNUSPOOL.msg
HELPPARSE	=	$(UTILDIR)/helpparse
prefix		=	@prefix@
exec_prefix	=	@exec_prefix@
BINDIR		=	@bindir@
SBINDIR		=	@sbindir@
INTBINDIR	=	@pkgexecdir@
DATADIR		=	@pkgdatadir@
INSTALL		=	@INSTALL@
INSTALL_DATA	=	@INSTALL_DATA@

all:	buildd build-src

buildd:	utild
	$(HELPPARSE) $(MSGFILE) $(SRCDIR) $(BUILDDIR)
	touch $@

build-src:
	cd $(BUILDDIR);$(MAKE) all
	touch $@

utild:
	cd $(UTILDIR);$(MAKE) all
	touch $@

install: all
	cd $(UTILDIR);make install
	cd $(BUILDDIR);$(MAKE) install prefix="$(prefix)" exec_prefix="$(exec_prefix)"
	$(INSTALL) gspl-ptrinstall $(SBINDIR)
	$(INSTALL) pclbanner psbanner $(INTBINDIR)
	cp -r -p Psetups $(DATADIR)
	$(BINDIR)/gspl-uchange -R
	$(BINDIR)/gspl-uchange -p ALL `who am i|sed -e 's/ .*//'`

install-deb:	all
	cd $(UTILDIR);make install-deb
	cd $(BUILDDIR);$(MAKE) install-deb prefix="$(prefix)" exec_prefix="$(exec_prefix)"
	$(INSTALL) gspl-ptrinstall $(SBINDIR)
	$(INSTALL) pclbanner psbanner $(INTBINDIR)
	cp -r -p Psetups $(DATADIR)

install-strip:	all
	cd $(UTILDIR);make install-strip
	cd $(BUILDDIR);$(MAKE) install-strip prefix="$(prefix)" exec_prefix="$(exec_prefix)"
	$(INSTALL) gspl-ptrinstall $(SBINDIR)
	$(INSTALL) pclbanner psbanner $(INTBINDIR)
	cp -r -p Psetups $(DATADIR)
	$(BINDIR)/gspl-uchange -R
	$(BINDIR)/gspl-uchange -p ALL `who am i|sed -e 's/ .*//'`

install-user user-install:
	@perlbin@ $(BASE)/Userinst

install-net:
	@perlbin@ $(BASE)/Netinst

clean:
	cd $(UTILDIR);$(MAKE) clean
	rm -fr $(BUILDDIR) buildd utild build-src

distclean:	clean
	cd $(UTILDIR);$(MAKE) distclean
	cd $(SRCDIR);$(MAKE) distclean
	$(RM) $(SRCDIR)/hdrs/files.h $(SRCDIR)/hdrs/infiles.h 
	$(RM) config.cache config.h config.status config.log Makefile gspl-ptrinstall
	$(RM) Checkuserinst Userinst Netinst
