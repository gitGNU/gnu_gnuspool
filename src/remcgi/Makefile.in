SHELL		=	/bin/sh
@SET_MAKE@
prefix		=	@prefix@
exec_prefix	=	@exec_prefix@
CC		=	@CC@
CCFLAGS		=	-O @gcc_useful_options@ @funny_compiler_options@
LDFLAGS		=
LIBS		=	@LIBS@
LIBDIR		=	@libdir@
LIBNET		=	@SOCKLIBS@
MV		=	mv
RM		= 	rm -f
PARENT		=	..
BASE		=	../..
HDRS		=	$(PARENT)/hdrs
MYLIBDIR	=	$(PARENT)/lib
APILIBDIR	=	$(PARENT)/apilib
CFLAGS		=	$(CCFLAGS) -I$(HDRS) -I$(PARENT) -I$(APILIBDIR)
LIB		=	$(MYLIBDIR)/libgnuspool_int.a
APILIB		=	$(APILIBDIR)/libgnuspool.a
APISHLIB	=	$(APILIBDIR)/libgnuspool.so
INSTALL		=	@INSTALL@
INSTALL_DATA	=	@INSTALL_DATA@
RCGIMODES	=	-o root -g root -m 6755
BINDIR		=	@bindir@
INTBINDIR	=	@pkgexecdir@
CGIBINDIR	=	$(INTBINDIR)/cgi-bin

RSQCGIOBS	=	rsqcgi.o rcgilib.o
RSQCCGIOBS	=	rsqccgi.o rcgilib.o
RSQCRCGIOBS	=	rsqcrcgi.o rcgilib.o
RSQDCGIOBS	=	rsqdcgi.o rcgilib.o
RSQVCGIOBS	=	rsqvcgi.o rcgilib.o
RSPCGIOBS	=	rspcgi.o rcgilib.o
RSPCCGIOBS	=	rspccgi.o rcgilib.o

all:	@main_target@

nonshared:	rsqcgi rsqccgi rsqcrcgi rsqdcgi rsqvcgi rspcgi rspccgi

shared:		rsqcgi_s rsqccgi_s rsqcrcgi_s rsqdcgi_s rsqvcgi_s rspcgi_s rspccgi_s

rsqcgi:	$(RSQCGIOBS)
	$(CC) -o $@ $(LDFLAGS) $(RSQCGIOBS) $(APILIB) $(LIB) $(LIBNET) $(LIBS)

rsqcgi_s:	$(RSQCGIOBS)
	$(CC) -o rsqcgi $(LDFLAGS) $(RSQCGIOBS) $(APISHLIB) $(LIB) $(LIBNET) $(LIBS)
	touch $@

rsqccgi:	$(RSQCCGIOBS)
	$(CC) -o $@ $(LDFLAGS) $(RSQCCGIOBS) $(APILIB) $(LIB) $(LIBNET) $(LIBS)

rsqccgi_s:	$(RSQCCGIOBS)
	$(CC) -o rsqccgi $(LDFLAGS) $(RSQCCGIOBS) $(APISHLIB) $(LIB) $(LIBNET) $(LIBS)
	touch $@

rsqcrcgi:	$(RSQCRCGIOBS)
	$(CC) -o $@ $(LDFLAGS) $(RSQCRCGIOBS) $(APILIB) $(LIB) $(LIBNET) $(LIBS)

rsqcrcgi_s:	$(RSQCRCGIOBS)
	$(CC) -o rsqcrcgi $(LDFLAGS) $(RSQCRCGIOBS) $(APISHLIB) $(LIB) $(LIBNET) $(LIBS)
	touch $@

rsqdcgi:	$(RSQDCGIOBS)
	$(CC) -o $@ $(LDFLAGS) $(RSQDCGIOBS) $(APILIB) $(LIB) $(LIBNET) $(LIBS)

rsqdcgi_s:	$(RSQDCGIOBS)
	$(CC) -o rsqdcgi $(LDFLAGS) $(RSQDCGIOBS) $(APISHLIB) $(LIB) $(LIBNET) $(LIBS)
	touch $@

rsqvcgi:	$(RSQVCGIOBS)
	$(CC) -o $@ $(LDFLAGS) $(RSQVCGIOBS) $(APILIB) $(LIB) $(LIBNET) $(LIBS)

rsqvcgi_s:	$(RSQVCGIOBS)
	$(CC) -o rsqvcgi $(LDFLAGS) $(RSQVCGIOBS) $(APISHLIB) $(LIB) $(LIBNET) $(LIBS)
	touch $@

rspcgi:	$(RSPCGIOBS)
	$(CC) -o $@ $(LDFLAGS) $(RSPCGIOBS) $(APILIB) $(LIB) $(LIBNET) $(LIBS)

rspcgi_s:	$(RSPCGIOBS)
	$(CC) -o rspcgi $(LDFLAGS) $(RSPCGIOBS) $(APISHLIB) $(LIB) $(LIBNET) $(LIBS)
	touch $@

rspccgi:	$(RSPCCGIOBS)
	$(CC) -o $@ $(LDFLAGS) $(RSPCCGIOBS) $(APILIB) $(LIB) $(LIBNET) $(LIBS)

rspccgi_s:	$(RSPCCGIOBS)
	$(CC) -o rspccgi $(LDFLAGS) $(RSPCCGIOBS) $(APISHLIB) $(LIB) $(LIBNET) $(LIBS)
	touch $@

install:
	$(INSTALL) -d $(CGIBINDIR)
	$(INSTALL) $(RCGIMODES) rsqcgi rsqccgi rsqcrcgi rsqdcgi rsqvcgi rspcgi rspccgi $(CGIBINDIR)

install-strip:
	$(INSTALL) -d $(CGIBINDIR)
	$(INSTALL) -s $(RCGIMODES) rsqcgi rsqccgi rsqcrcgi rsqdcgi rsqvcgi rspcgi rspccgi $(CGIBINDIR)

clean:
	$(RM) *.o rsqcgi rsqccgi rsqcrcgi rsqdcgi rsqvcgi rspcgi rspccgi *_s

distclean:	clean
	$(RM) Makefile
