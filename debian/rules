#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
ifneq ($(DEB_HOST_GNU_TYPE),$(DEB_BUILD_GNU_TYPE))
CROSS= --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)
else
CROSS= --build $(DEB_BUILD_GNU_TYPE)
endif

%:
	dh  $@

override_dh_auto_configure:
	./configure $(CROSS) --prefix=/usr --enable-sharedlibs --sysconfdir=/etc --localstatedir=/var/spool \
	--libexecdir='$${exec_prefix}/lib' --datarootdir=/usr/share --pdfdir=/usr/share/doc/gnuspool CFLAGS="$(CFLAGS)" LDFLAGS="-Wl,-z,defs"

override_dh_installdirs:
	dh_installdirs -Pdebian/tmp -pgnuspool
	dh_installdirs -Ngnuspool

override_dh_auto_install:
	$(MAKE) DESTDIR=$(CURDIR)/debian/tmp SPOOLUSER=root datarootdir=/usr/share STAGED_INSTALL=true install

	# keep lintian quiet about printers directory
	echo 'This directory is for printer setup files' >$(CURDIR)/debian/tmp/usr/share/gnuspool/ptrs/README
	# Get rid of remote CGI bins for now as they depend on separated API library.
	rm -f $(CURDIR)/debian/tmp/usr/lib/gnuspool/cgi-bin/r*
	# Remove .la files for internal only
	rm -f $(CURDIR)/debian/tmp/usr/lib/libgnuspool_int.la
	rm -f $(CURDIR)/debian/tmp/usr/lib/libgnuspool_curs.la

override_dh_install:
	dh_install --fail-missing
